<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/Sytle4">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_square">

                <TextView
                    android:id="@+id/text1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Afstand: "
                    android:textSize="35sp"
                    android:textColor="@color/Sytle8"
                    android:layout_marginBottom="13dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0.00 KM"
                    android:textSize="25sp"
                    android:textColor="@color/Sytle4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_square">

                <TextView
                    android:id="@+id/text2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Tijd:         "
                    android:textSize="35sp"
                    android:textColor="@color/Sytle8"
                    android:layout_marginBottom="13dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0.00 S"
                    android:textSize="25sp"
                    android:textColor="@color/Sytle4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_square">

                <TextView
                    android:id="@+id/text3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Snelheid:"
                    android:textSize="35sp"
                    android:textColor="@color/Sytle8"
                    android:layout_marginBottom="13dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0.00 KM/H"
                    android:textSize="25sp"
                    android:textColor="@color/Sytle4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_square">

                <TextView
                    android:id="@+id/text4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Punten:  "
                    android:textSize="35sp"
                    android:textColor="@color/Sytle8"
                    android:layout_marginBottom="13dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="000"
                    android:textSize="25sp"
                    android:textColor="@color/Sytle4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <include
            android:id="@+id/testbutton"
            layout="@layout/button_layout" />

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/testbutton2"
            layout="@layout/button_layout"/>

    </LinearLayout>
</LinearLayout>